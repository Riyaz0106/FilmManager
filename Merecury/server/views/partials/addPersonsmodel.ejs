<div class="modal fade" id="addPersonsModel" aria-hidden="true" aria-labelledby="addPersonsModelLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addPersonsModelLabel">Add Film Person Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="addPersonsform" role="form" method="POST" action="/add/filmpersons">
                <div class="row">
                    <div class="form-group">
                        <label class="control-label">Name</label>
                        <div>
                            <input type="text" class="form-control input-lg" name="name" value="">
                        </div>
                    </div>
                </div>
                </br>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label class="control-label">Age</label>
